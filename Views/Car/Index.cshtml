@model List<Car>
@{
    ViewData["Title"] = "Car List";
}

<style>
    .fixed-size-img {
        width: 100%;
        height: 200px;
        object-fit: cover; 
    }
</style>


<div class="container">
    <div class="row">
        @if (Model != null)
        {
            @foreach (var car in Model)
            {
                <div class="col-md-3 mb-3">
                    <div class="card border-dark">
                        <div class="card-header">
                            <div class="card-title text-center">
                                <h5>@car.Mark @car.Model</h5>
                            </div>
                        </div>
                        <div class="card-body">
                            <img class="card-img-top fixed-size-img" src="@car.ImagePath" alt="Car Image">
                        </div>
                        <div class="card-footer d-flex">
                            <a class="btn btn-info flex-fill me-2" asp-controller="Car" asp-action="CarDetails"
                               asp-route-id="@car.Id">Details</a>
                            <form asp-action="Delete" method="post" class="flex-fill">
                                <input asp-for="@car.Id" name="id" type="hidden" />
                                <input asp-for="@car.ImagePath" name="imagePath" type="hidden" />
                                <button type="submit" class="btn btn-danger w-100">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        
    </div>
</div>
