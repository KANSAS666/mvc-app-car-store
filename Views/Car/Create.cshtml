@model CarStore.Models.Car
@{
    ViewData["Title"] = "Add Car";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form method="post" enctype="multipart/form-data" asp-action="AddNewCar" asp-controller="Car">
                <div class="mb-3">
                    <label asp-for="Mark" class="form-label"></label>
                    <input asp-for="Mark" class="form-control">
                    <span asp-validation-for="Mark" />
                </div>
                <div class="mb-3">
                    <label asp-for="Model" class="form-label"></label>
                    <input asp-for="Model" class="form-control">
                    <span asp-validation-for="Model" />
                </div>
                <div class="form-group">
                    <label asp-for="Mileage"></label>
                    <input asp-for="Mileage" class="form-control" />
                    <span asp-validation-for="Mileage" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Color"></label>
                    <input asp-for="Color" class="form-control"/>
                    <span asp-validation-for="Color" />
                </div>
                <div class="input-group mb-3">
                    <label asp-for="Image" class="input-group-text"></label>
                    <input asp-for="Image" class="form-control" accept=".png, .jpg, .jpeg, .jfif">
                    <span asp-validation-for="Image" />
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
                <a class="btn btn-danger" asp-controller="Car" asp-action="Index">Back</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

